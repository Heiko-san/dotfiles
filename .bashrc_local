HOSTNAME=$(hostname)

# export EC2 instance tags, cache them 1 day
TAGSSCRIPT="/usr/local/bin/mytags"
if [ -x $TAGSSCRIPT ]; then
    TAGSFILE="$BOREUS_ENV/.cache_tags"
    if [ ! -r $TAGSFILE ] || test $(find $TAGSFILE -mtime +1); then
        $TAGSSCRIPT | sed "s/^/export 'TAG_/;s/$/'/" >$TAGSFILE
    fi
    source $TAGSFILE
fi

# stage
if [ -z "$STAGE" ]; then
    if [ -n "$TAG_Stage" ]; then
        STAGE=$TAG_Stage
    else
        STAGE="prod"
        [[ $HOSTNAME =~ -(stage|int)- ]] && STAGE="int"
        [[ $HOSTNAME =~ -(test|testing)- ]] && STAGE="test"
    fi
    export STAGE
fi

# prompt 
RED="\033[01;31m"
GREEN="\033[01;32m"
YELLOW="\033[01;33m"
BLUE="\033[01;34m"
COLOROFF="\033[m"
HOSTCOLOR=$RED
[ "$STAGE" == "int" ] && HOSTCOLOR=$YELLOW
[ "$STAGE" == "test" ] && HOSTCOLOR=$GREEN
if [[ ${EUID} == 0 ]] ; then
    PS1="\$? \[${RED}\]\u\[${BLUE}\]@\[${HOSTCOLOR}\]\h\[${BLUE}\] \w \[${COLOROFF}\]\$ "
else
    PS1="\$? \[${GREEN}\]\u\[${BLUE}\]@\[${HOSTCOLOR}\]\h\[${BLUE}\] \w \[${COLOROFF}\]\$ "
fi
